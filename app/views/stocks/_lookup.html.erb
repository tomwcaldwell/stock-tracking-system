<div id="stock-lookup">

	<%= form_tag search_stocks_path, remote: true, method: :get, id: 'stock-lookup-form' do %>

		<div class="form-group row no-padding text-center">

			<div class="col-md-12">

				<%= text_field_tag :stock, params[:stock], placeholder: "Stock Name", autofocus: true, class: 'form-control search-box input-lg' %>

			</div>

		</div>

		<div class="form-group row no-padding text-center">

			<div class="col-md-6 col-md-offset-3">

				<%= button_tag(type: :submit, class: "btn btn-lg btn-success") do %>

					<i class="fa fa-search"></i> Look up a stock

				<% end %>

			</div>

		</div>

	<% end %>

	<br />

	<%= render 'common/spinner' %>

	<br />

	<% if @stock %>

		<div id="stock-lookup-results" class="well results-block">

			<div style="text-align:center;">
			
				<strong>Symbol:</strong> <span style="font-size:21px;"><%= @stock.ticker %></span><br />
				<strong>Name:</strong> <span style="font-size:21px;"><%= @stock.name %></span><br />
				<strong>Price:</strong> <span style="font-size:21px;"><%= @stock.price %></span>

			</div>

		</div>

	<% end %>

	<div id="stock-lookup-errors"></div>

</div>